<script>
  $(document).on("click", "#edit_btn", function (e) {
    let getData = $(e.target).attr("data-model");
    let finalData = JSON.parse(getData);
    $("#editModal").modal("show");
    var data = finalData;
    $("#editid").val(data._id);
    $("#editheading").val(data.heading)
    $("#editparagraph").val(data.paragraph)
    $("#editheading1").val(data.heading1)
    $("#editparagraph1").val(data.paragraph1)
    $("#editheading2").val(data.heading2)
    $("#editparagraph2").val(data.paragraph2)
    $("#editheading3").val(data.heading3)
    $("#editparagraph3").val(data.paragraph3)
  });

  var editform = $("#edit_ourwork");
  editform.on("submit", editSubmitHandler);

  function editSubmitHandler(e) {
    e.preventDefault();

    var formData = getFormData(editform);
    console.log(formData);

    // DO POST
    $.ajax({
      type: "POST",
      contentType: "application/json",
      url: "/admin/ourwork/edit",
      data: JSON.stringify(formData),
    })
    setTimeout(function (res) {
        console.log("Form Successfully")
        window.location.reload(1);
      }, 1000)

      .fail(function (xhr, status, error) {
        console.log(xhr.responseText)
      });
  }
</script>